<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_background02" />

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/nav_b_white"
        android:drawablePadding="10dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:text="返回"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <com.wzdx.competionmanagesystem.Widget.CircleImageView
        android:id="@+id/img_head"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/icon_head" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_head"
        android:layout_centerHorizontal="true"
        android:text="不科学的AC君"
        android:textColor="@color/text_color_a"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_username"
        android:layout_centerHorizontal="true"
        android:text="计算机科学与技术 计本1班"
        android:textColor="@color/text_color_b"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_class"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color" />

        <TextView
            android:id="@+id/tv_competition_history"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawableRight="@drawable/nav_n"
            android:gravity="center_vertical"
            android:text="竞赛历史查询"
            android:textColor="@color/text_color_a"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color" />

        <TextView
            android:id="@+id/tv_user_info_detail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawableRight="@drawable/nav_n"
            android:gravity="center_vertical"
            android:text="个人详细资料"
            android:textColor="@color/text_color_a"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color" />

        <TextView
            android:id="@+id/tv_alter_login_pwd"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawableRight="@drawable/nav_n"
            android:gravity="center_vertical"
            android:text="修改登录密码"
            android:textColor="@color/text_color_a"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color" />

        <Button
            android:id="@+id/btn_cancle"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:background="#3BBDEF"
            android:text="退出登录"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>


</RelativeLayout>